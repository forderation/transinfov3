<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_nama_jalan"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Nama Jalan"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lk"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Lokasi Parkir"/>
            <TextView
                android:id="@+id/tv_kc"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Kecamatan"/>
            <TextView
                android:id="@+id/tv_desa"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Desa"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_jukir"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Nama Jukir"/>
            <TextView
                android:id="@+id/tv_pengawas"
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Nama Pengawas"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_kapasitas"
                android:layout_height="wrap_content"
                android:text="Kapasitas: "/>
            <ImageView
                android:id="@+id/img_location"
                android:layout_width="50dp"
                android:layout_margin="4dp"
                android:tint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_height="50dp"
                android:src="@drawable/ic_location_on_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>